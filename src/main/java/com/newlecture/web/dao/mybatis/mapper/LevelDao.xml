<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.newlecture.web.dao.LevelDao">

	<!-- id는 자동 증가 -->
	<insert id="insert" parameterType="com.newlecture.web.entity.Level">
		insert into Level(title, regUserId, description)
		values(#{title}, #{regUserId}, #{description})
	</insert>

	<update id="update" parameterType="com.newlecture.web.entity.Level">
		update [Level]
		set [title]  = #{title}
		   ,[regUserId] = #{regUserId}
		   ,[description] = #{description}
		where id=#{id}
	</update>

	<delete id="delete" parameterType="Long">
		delete from [dbo].[Level]
		where id = #{param1}
	</delete>

	<select id="get" resultType="com.newlecture.web.entity.Level">
		select * from Level where id=#{param1}
	</select>

	<select id="getList" resultType="com.newlecture.web.entity.Level">
		select * from Level
<!-- where ${param1} like '%${param2}%' -->
		<!-- 다음은 페이징을 위한 쿼리 옵션 -->
<!-- 		order by regDate desc
		offset #{(param3-1)}*10 rows
		fetch next 10 rows only -->
	</select>
	
</mapper>